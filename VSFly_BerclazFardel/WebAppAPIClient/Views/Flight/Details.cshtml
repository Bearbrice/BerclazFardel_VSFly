@model WebAppAPIClient.ViewModel.FlightBooking

@{
    ViewData["Title"] = "Details";

    var id = Model.Flight.FlightNo;
}

<h1>Details</h1>

<div>
    <h4>FlightBooking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.FlightNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.FlightNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.TotalSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.TotalSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.BasePrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.BasePrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.SeatsBooked)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.SeatsBooked)
        </dd>
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.Flight)
        </dt>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.Flight)
        </dd>

        
    </dl>



    <form asp-action="Details">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" hidden>
            <label asp-for="Flight.FlightNo" class="control-label"></label>
            <input asp-for="Flight.FlightNo" class="form-control" id="txtFirstName" value="@id" />
            <span asp-validation-for="Flight.FlightNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Firstname" class="control-label"></label>
            <input asp-for="Firstname" class="form-control" id="txtFirstName" />
            <span asp-validation-for="Firstname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lastname" class="control-label"></label>
            <input asp-for="Lastname" class="form-control" id="txtLastName" />
            <span asp-validation-for="Lastname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Confirm booking" class="btn btn-primary" />
        </div>

        @*@Html.ActionLink("Confirm booking", "Details", new { id = Model.Flight.FlightNo, firstName = txtFirstName, lastName = txtLastName.value })*@
    </form>


</div>

<div>
    <a asp-action="Index">Back to all flights</a>
</div>
